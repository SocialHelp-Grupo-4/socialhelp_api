{
    "openapi": "3.0.0",
    "info": {
        "title": "SocialHelp API",
        "version": "1.0.0",
        "description": "API documentation for SocialHelp application."
    },
    "servers": [
        {
            "url": "{{base_url}}"
        }
    ],
    "paths": {
        "/api/v1/register": {
            "post": {
                "summary": "Register a new user",
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    }
                },
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "example": {
                                "name": "Jane Doe",
                                "email": "jane.doe@socialhelp.org",
                                "password": "password"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/login": {
            "post": {
                "summary": "Login user",
                "responses": {
                    "200": {
                        "description": "Login successful"
                    }
                },
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "example": {
                                "email": "master@socialhelp.org",
                                "password": "password"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/refresh": {
            "post": {
                "summary": "Refresh authentication token",
                "responses": {
                    "200": {
                        "description": "Token refreshed"
                    }
                },
                "tags": ["Auth"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {}
                }
            }
        },
        "/api/v1/logout": {
            "post": {
                "summary": "Logout user",
                "responses": {
                    "200": {
                        "description": "Logged out successfully"
                    }
                },
                "tags": ["Auth"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {}
                }
            }
        },
        "/api/v1/user": {
            "get": {
                "summary": "Get authenticated user details",
                "responses": {
                    "200": {
                        "description": "User details retrieved"
                    }
                },
                "tags": ["Auth"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/public/projects": {
            "get": {
                "summary": "List public projects",
                "tags": ["Public Projects"],
                "parameters": [
                    {
                        "name": "institution_id",
                        "in": "query",
                        "description": "Filter by institution ID",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of projects"
                    }
                }
            }
        },
        "/api/v1/public/projects/{id}": {
            "get": {
                "summary": "Get project details",
                "tags": ["Public Projects"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Project ID",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Project details"
                    },
                    "404": {
                        "description": "Project not found"
                    }
                }
            }
        },
        "/api/v1/public/projects/{id}/register": {
            "post": {
                "summary": "Register available project",
                "tags": ["Public Projects"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Project ID",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Registration successful"
                    }
                }
            }
        },
        "/api/v1/public/my-family": {
            "get": {
                "summary": "Get authenticated user's family",
                "tags": ["Family"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Family details"
                    },
                    "404": {
                        "description": "Family not found"
                    }
                }
            },
            "post": {
                "summary": "Create family record",
                "tags": ["Family"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["address"],
                                "properties": {
                                    "address": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Family created"
                    }
                }
            },
            "put": {
                "summary": "Update family record",
                "tags": ["Family"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "address": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Family updated"
                    },
                    "404": {
                        "description": "Family not found"
                    }
                }
            }
        },
        "/api/v1/public/institutions/register": {
            "post": {
                "summary": "Register a new institution",
                "tags": ["Institution Registration"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["name", "nif", "email", "institution_category_id"],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "nif": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "institution_category_id": {
                                        "type": "integer"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Institution registered successfully"
                    }
                }
            }
        },
        "/api/v1/public/my-institutions-status": {
            "get": {
                "summary": "Check status of registered institutions",
                "tags": ["Institution Registration"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of institutions and statuses"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
}
